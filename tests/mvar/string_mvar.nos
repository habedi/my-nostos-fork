# expect: 0
# String mvar

mvar name: String = "initial"

get_name() = name

set_name(n) = {
    name = n
    n  # return the value we set (avoids read after write)
}

main() = {
    assert_eq("initial", get_name())
    assert_eq("updated", set_name("updated"))
    assert_eq("updated", get_name())
    0
}
