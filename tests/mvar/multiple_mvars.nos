# expect: 0
# Multiple mvars in same function with self-updating pattern

mvar x: Int = 10
mvar y: Int = 20

# Self-updating patterns - each mvar updated atomically
update_both() = {
    x = x + 5
    y = y + 10
    x + y
}

main() = {
    # Initial: x=10, y=20
    # After: x=15, y=30, sum=45
    assert_eq(45, update_both())
    0
}
